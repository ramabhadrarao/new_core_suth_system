<!-- views/layout.ejs - Base layout with Tabler UI -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %> - Dynamic Auth System</title>
    <!-- CSS files -->
    <link href="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta17/dist/css/tabler.min.css" rel="stylesheet">
    <!-- <link href="https://cdn.jsdelivr.net/npm/@tabler/icons@latest/tabler-sprite.css" rel="stylesheet"> -->
    <link href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css" rel="stylesheet">

    <style>
        @import url('https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css');
        
        .page-wrapper {
            background: var(--tblr-body-bg);
        }
        
        .sidebar .nav-link.active {
            background-color: var(--tblr-primary);
            color: white;
        }
        
        .sidebar .nav-link:hover {
            background-color: var(--tblr-gray-100);
        }
        
        .card-actions .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
        
        .avatar {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            font-weight: 600;
            line-height: 1;
            color: var(--tblr-avatar-color);
            text-align: center;
            text-decoration: none;
            text-transform: uppercase;
            background-color: var(--tblr-gray-200);
            border-radius: var(--tblr-border-radius);
        }
        
        .navbar-brand img {
            max-height: 2rem;
        }
        
        .page-body {
            padding-top: 1.5rem;
        }
        
        /* Login page specific styles */
        .page-center {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .container-tight {
            max-width: 30rem;
        }
        
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .form-control {
            border: 1px solid #e2e8f0;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
        }
        
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        
        .btn-primary {
            background-color: #667eea;
            border-color: #667eea;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-weight: 500;
        }
        
        .btn-primary:hover {
            background-color: #5a6fd8;
            border-color: #5a6fd8;
        }
        
        .navbar-brand {
            font-size: 1.25rem;
            font-weight: 600;
            color: white;
            text-decoration: none;
        }
        
        .alert {
            border-radius: 0.5rem;
            border: none;
            margin-bottom: 1.5rem;
        }
        
        .alert-danger {
            background-color: #fee;
            color: #dc3545;
        }
        
        .alert-success {
            background-color: #efe;
            color: #28a745;
        }
        
        .hr-text {
            position: relative;
            text-align: center;
            margin: 1.5rem 0;
            color: #6c757d;
        }
        
        .hr-text::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #e2e8f0;
        }
        
        .hr-text span {
            background: white;
            padding: 0 1rem;
            position: relative;
        }
        
        @media (max-width: 767.98px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: -100%;
                z-index: 1040;
                width: 280px;
                height: 100vh;
                background: white;
                transition: left 0.3s ease;
                border-right: 1px solid var(--tblr-border-color);
            }
            
            .sidebar.show {
                left: 0;
            }
            
            .sidebar-overlay {
                position: fixed;
                top: 0;
                left: 0;
                z-index: 1030;
                width: 100vw;
                height: 100vh;
                background: rgba(0, 0, 0, 0.5);
                opacity: 0;
                visibility: hidden;
                transition: all 0.3s ease;
            }
            
            .sidebar-overlay.show {
                opacity: 1;
                visibility: visible;
            }
        }
        
        .table-actions {
            white-space: nowrap;
        }
        
        .table-actions .btn {
            padding: 0.25rem 0.5rem;
            margin: 0 0.125rem;
        }
        
        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.5rem;
            border-radius: 0.375rem;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .status-badge.status-active {
            background-color: var(--tblr-green-lt);
            color: var(--tblr-green);
        }
        
        .status-badge.status-inactive {
            background-color: var(--tblr-red-lt);
            color: var(--tblr-red);
        }
        
        .permissions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }
        
        .permission-card {
            border: 1px solid var(--tblr-border-color);
            border-radius: var(--tblr-border-radius);
            padding: 1rem;
        }
        
        .permission-actions {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        
        .permission-actions .form-check {
            margin: 0;
        }
        
        /* Icon fixes */
        .icon {
            width: 1rem;
            height: 1rem;
            stroke: currentColor;
            stroke-width: 2;
            stroke-linecap: round;
            stroke-linejoin: round;
            fill: none;
        }
    </style>
    <% if (typeof extraCSS !== 'undefined') { %>
        <%= extraCSS %>
    <% } %>
</head>
<body>
